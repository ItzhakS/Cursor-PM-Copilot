# Copy to .env and fill in. Do not commit .env.

# Notion (create integration at https://www.notion.so/my-integrations)
NOTION_API_SECRET=

# Optional: override default output directory for Notion markdown
# NOTION_OUTPUT_DIR=./output/Notion

# Optional: for manual-mode fetch (stage-by-stage), set wiki page ID and product database ID
# NOTION_WIKI_PAGE_ID=
# NOTION_PRODUCT_DATABASE_ID=

# Linear (API key from https://linear.app/settings/api)
LINEAR_API_KEY=

# Optional: team name in Linear (default: "My Team")
# LINEAR_TEAM_NAME=My Team

# Optional: batch file prefix and output directory for Linear
# LINEAR_BATCH_PREFIX=Issues-Batch
# LINEAR_OUTPUT_DIR=./output/Linear

# NDDF pricing script: path to NDDF Plus "Descriptive and Pricing" data directory
# NDDF_ROOT=./nddf_data

# Optional: for compare_notion_local.py
# NOTION_BASE_DIR=./output/Notion
